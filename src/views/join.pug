extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST").join-form
        input(placeholder="이름",name="name", required, type="text")
        input(placeholder="유저이름",name="username", required, type="text")
        input(placeholder="이메일 주소",name="email", required, type="email")
        small 존재하는 이메일을 적어주세요
        input(placeholder="비밀번호",name="password", required, type="password")
        input(placeholder="확인",name="password2", required, type="password")
        input(placeholder="지역",name="location", required, type="text")
        div.auth_switch
            a(href="/login") 로그인하기
        input(type="submit", value="가입")
        hr
        include partials/social-login

